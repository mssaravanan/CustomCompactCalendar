<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.sgv.calendar.CompactCalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/compactcalendar_view"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_220sdp"
            app:compactCalendarMinYear="@dimen/min_year"
            app:compactCalendarMaxYear="@dimen/max_year"
            app:compactCalendarBackgroundColor="@color/app_background"
            app:compactCalendarCircleScale="@dimen/circle_scale"
            app:compactCalendarCurrentDayBackgroundColor="@color/calender_current_color"
            app:compactCalendarCurrentDayIndicatorStyle="no_fill_large_indicator"
            app:compactCalendarCurrentDayTextColor="@color/app_text_light_black_color"
            app:compactCalendarDrawRowLine="false"
            app:compactCalendarEventIndicatorStyle="small_indicator"
            app:compactCalendarOtherMonthDaysTextColor="#534c4c"
            app:compactCalendarSelectedDayBackgroundColor="@color/color_7"
            app:compactCalendarSelectedDayIndicatorStyle="no_fill_large_indicator"
            app:compactCalendarShouldSelectFirstDayOfMonthOnScroll="true"
            app:compactCalendarTargetHeight="@dimen/_220sdp"
            app:compactCalendarTextColor="@color/app_text_light_black_color"
            app:compactCalendarDateTextSize="@dimen/_10sdp"
            app:compactCalendarMonthTextSize="@dimen/_12sdp"
            app:compactCalendarWeekTextSize="@dimen/_11sdp"
            app:compactCalendarApplyWeekEndColor="true"
            app:compactCalendarWeekBackgroundStyle="stroke"
            app:compactCalendarDisplayMonthName="false"
            app:compactCalendarEventCircleOverlap="true"
            app:compactCalendarEventOverLapOffset="@dimen/event_circle_overlap_offset"
            app:compactCalendarEventCircleRadius="@dimen/event_circle_radius"
            app:compactCalendarWeekDaysTextColor="@color/app_text_light_black_color"
            app:compactCalendarWeekEndDaysTextColor="@color/app_blue_color"
            app:compactCalendarWeekNamesBackgroundColor="@color/rating_bar_yellow_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>